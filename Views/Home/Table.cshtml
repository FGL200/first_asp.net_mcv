@{
    ViewData["Title"] = "Table";
}

@model IEnumerable<Employee>

<h1>TABLE</h1>

<main class="d-flex align-items-center justify-content-center">
    <table class="table">
        @if (Model.Count() > 0)
        {
        <thead>
            <tr>
                <th>ID</th>
                <th>First name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee emp in Model)
            {
            <tr>
                <td>@emp.id</td>
                <td>@emp.fname</td>
            </tr>
            }
        </tbody>
        }
    </table>
</main>